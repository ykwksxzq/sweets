<div class="container">
  <div class="row justify-content-center">
   <h2 class="title mb-2">Users</h2>
  </div>
  <div class="row justify-content-center">
  <div class="col-10 col-lg-8">
   <table class="table table-hover table-inverse m-3">
    <thead>
      <tr>
        <th>#</th>
        <th></th>
        <th>Name</th>
        <th>Posts</th>
        <th>Reviews</th>
        <th>Favorites</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <td><%= user.id %></td>
      <td><%= image_tag user.get_profile_image(70,70), class:"card-img img-fluid"; %></td>
      <td><%= user.name %></td>
      <td><%= user.posts.count %></td>
      <td><%= user.reviews.count %></td>
      <td><%= user.favorites.count %></td>
      <td><%= user.comments.count %></td>
    </tbody>
    <% end %>
    </table>
    </div>
    </div>


</div>

