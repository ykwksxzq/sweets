  <div class="container">
 <div class="border-bottom border-info" style="padding:10px;">
  <div class="row justify-content-center">
   <h2 class="title mb-2">Reviews</h2>
  </div>
 </div>

 <% if @reviews.present? %>
  <div class="row justify-content-center">
   <div class="col-10 col-lg-8">
    <table class="table table-hover table-inverse m-4">
    <thead>
	    <tr>
	     <th>ID</th>
	     <th>Name</th>
	     <th>Comment</th>
	     <th></th>
	    </tr>
    </thead>
    <tbody>
    <% @reviews.each do |review| %>
     <tr>
      <td><%= review.user_id %></td>
      <td><%= review.user.name %></td>
      <td><%= review.content %></td>
      <td><%= link_to "Show", admin_review_path(review.post_id), class:"btn btn-primary" %></td>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>

 <% else %>

 投稿しているコメントはありません

 <% end %>

</div>




