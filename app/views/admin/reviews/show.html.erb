<section class="section mt-6">
  <div class="container">
     <div class="row justify-content-center">
      <h1 class="main-title md-2">Reviews</h1>
    </div>

     <div class="row justify-content-center">
      <div class="col-md-8 mb-2">
         <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
             <%= @post.title %>
            </p>
          </header>
          <div class="card-content">
            <%= link_to admin_post_path(@post.id) do %>
            <%= image_tag @post.get_image(500, 500), class:"card-img-top";%>
            <% end %>
          <div class="card-content">
            <div class="card header p-3">

            <%= render 'star', post: @post %>

               <div class="text-right m-2">
                <%= link_to 'Highest Score', admin_review_path(@post, sort: 'highest_score'), class: 'btn btn-sm btn-outline-primary mr-2' %>
                <%= link_to 'Lowest Score', admin_review_path(@post, sort: 'lowest_score'), class: 'btn btn-sm btn-outline-primary mr-2' %>
                <%= link_to 'New', admin_review_path(@post, sort: 'latest'), class: 'btn btn-sm btn-outline-primary mr-2' %>
                <%= link_to 'Old', admin_review_path(@post, sort: 'oldest'), class: 'btn btn-sm btn-outline-primary' %>
               </div>
            </div>
             <%= render 'table', reviews: @reviews %>
           </div>
         </div>

       </div>
     </div>
</section>