<div class="container">
  <div class="row">
    <div class="col-md-2">
     <%= render 'public/genres/genres', genres: @genres %>
     <%= render 'tag_list', tag_list: @tag_list %>
    </div>

     <div class="col-md-10 p-3">
       <div class="row justify-content-center">
         <h1 class="main-title mb-2"><%= @tag.name %> (<%= @posts.total_count %>)</h1>
       </div>

       <% if @posts.present? %>

         <%= render 'index', posts: @posts %>

       <% else %>


         <% @comment = 'No postings' %>
         <%= render 'layouts/space' %>

       <% end %>

        <div class="pagination justify-content-center">
          <%= paginate @posts, theme: 'bootstrap-5' %>
        </div>
      </div>
    </div>
</div>