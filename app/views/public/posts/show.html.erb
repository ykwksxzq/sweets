<div class="container">

 <%= render 'layouts/error_messages', model: @review %>

 <div class="row justify-content-center">

   <div class="col-mb-6 p-3">
    <div class="content">
     <%= image_tag @post.get_image(500,500), class: "img-fluid" %>
    </div>

   
     <%= link_to mypage_path(@post.user.id) do %>
      <%= image_tag @post.user.get_profile_image(150,150), class: "img-fluid mt-3 rounded-circle" %>
     <% end %>
       name: <%= @post.user.name %>

     <% if @post.user.owns?(current_user) %>

      <div class="btn group">
       <%= link_to "Edit", edit_post_path(@post), class: "btn btn-sm btn-success" %>
       <%= link_to "delete", post_path(@post.id),class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に投稿を削除しますか？" %>
      </div>

     <% end %>
    </div>


   <div class="col-md-6 p-3">
    <h5 class="row justify-content-center">
     <table class="table table-borderless">
      <tr>
        <th>reviews:</th>
        <td>
         <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: %">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
               <%= link_to post_reviews_path(@post) do %>
                点（<%= @post.reviews.count %>reviews）
               <% end %>
              </div>
            </div>
          </td>
      </tr>
      <tr>
       <th>title:</th>
       <td><%= @post.title %></td>
      </tr>
      <tr>
       <th>score: </th>
       <td><%= @post.rating %></td>
      </tr>

      <tr>
        <th>content:</th>
        <td><%=safe_join(@post.content.split("\n"),tag(:br))%>
      </tr>

      <tr>
       <th>genre:</th>
       <td><%= @post.genre.name %></td>
      </tr>
      <tr>
       <% if @post_tags.present? %>
       <th>tag: </th>
       <td>
       <% @post_tags.each do |tag| %>
       <%= link_to tag.name, search_tag_path(tag_id: tag.id) %><%="(#{tag.posts.count})" %>
       <% end %>
       </td>
       <% end %>
      </tr>

      </table>
     </h5>

     <div class="row p-3">
      <div class="col">
       <h3 class="title">Write to Review</h3>
        <%= render partial: 'public/reviews/form', review: @review, post: @post %>
       </div>
     </div>

    </div>
   </div>
</div>
