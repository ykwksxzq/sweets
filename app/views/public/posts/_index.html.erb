
    <div class="card-group py-5">
     <% @posts.each do |post| %>

     <div class="col-md-3 mb-2">
      <div class="card h-100 w-100 mx-auto">

       <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(300,300), class:"card-img-top img-fluid " %>
       <% end %>


        <div class="card-body">
         <div class="content">
                <div class="content average-score">
                  <div class="star-rating mb-2">
                   <div class="star-rating-front" style="width: <%= post.review_score_percentage %>%">★★★★★</div>
                    <div class="star-rating-back">★★★★★</div>
                  </div>
                  <div class="average-score-display ml-3 pt-2">
                   score: <%= post.avg_score %>（<%= post.reviews.count %>）
                  </div>
                </div>
              </div>
           </div>
         </div>
     </div>
     <% end %>
    </div>
