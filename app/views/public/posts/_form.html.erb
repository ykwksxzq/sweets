
 <div class="form-group row">
  <div class="field">
   <h5 class="text-dark p-3 mb-0">Post Image</h5>
     <%= f.file_field :image, accept: "image/*" %>
  </div>
  </div>

 <div class="form-group row">
   <div class="field">
    <h5 class="text-dark p-2 mb-0">Title(30文字以内）</h5>
    <%= f.text_field :title, class: 'form-control', placeholder:"30文字以内で入力"  %>
   </div>
  </div>

  <div class="form-group row">
    <div class="field">
     <h6 class="text-dark p-2 mb-0">Content(200文字以内)</h6>
      <%= f.text_area :content, class: 'form-control', placeholder:"200文字以内で入力" %>
    </div>
   </div>

  <div class="form-group row">
    <div class="field">
     <h6 class="text-dark p-2 mb-0">Janre</h6>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "custom-select w-100" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="field">
     <h6 class="text-dark p-2 mb-0">Tag (,で区切ると複数タグ登録できます)</h6>
    <%= f.text_field :name, value: @tag_list, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="field">
     <h6 class="text-dark p-2 mb-0">Status</h6>
      <%= f.select :status, options_for_select([["公開", "published"], ["下書き", "draft"]], "published"), {}, { class: "custom-select w-100", id: "post_status_select" } %>
      <%= f.hidden_field :is_published, value: "true", id: "is_published_input" %>
      <%= f.hidden_field :is_draft, value: "false", id: "is_draft_input" %>
   </div>
  </div>
