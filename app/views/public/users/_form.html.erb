 <div class="form-group row">
  <div class="field">
   <label for="inputImage">プロフィール画像</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*",class: 'form-control-file'%>
   </div>
  </div>

  <div class="form-group row">
   <div class="field">
    <label for="inputName">Name (20文字以内で設定)</label>
     <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "20文字以内で設定",class: 'form-control' %>
   </div>
  </div>

  <div class="form-group row">
   <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
   </div>
  </div>

  <div class="form-group row">
   <div class="field">
    <label for="inputText">introduction (100文字以内で入力)</label>
     <%= f.text_area :introduction, autofocus: true, id:"inputText", placeholder: "紹介文を書く",class: 'form-control' %>
   </div>
  </div>
