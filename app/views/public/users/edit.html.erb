<div class="container">

 <%= render 'layouts/error_messages', model: @user %>

 <div class="row justify-content-center">
  <div class="col-md-5 col-sm-10 m-3">
 <h1 class="main-title mb-2">User Edit</h1>

   <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>

   <%= render partial: 'form',  locals: {f:f } %>


  <div class="actions">
   <%= f.submit "Up date", class: 'btn btn-success' %>
  </div>

  <br>

<% end %>

