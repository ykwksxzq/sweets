<section class="section mt-6">
  <div class="container">
     <div class="row justify-content-center">
      <h1 class="main-title md-2">Reviews</h1>
    </div>
    
     <div class="row justify-content-center">
      <div class="col-md-8 mb-2">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
             <%= @post.title %>
            </p>
          </header>
          <div class="card-content">
            <%= link_to post_path(@post.id) do %>
            <%= image_tag @post.get_image(400, 400), class:"card-img-top";%>
            <% end %>
        <div class="card-body">
         <div class="content">
            <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: <%= @post.review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
                score: <%= @post.avg_score %> （<%= @post.reviews.count %> reviews）
              </div>
            </div>
          </div>
        </div>
        <table class="table is-fullwidth has-text-centered">
          <thead>
            <tr>
              <th>Name</th><th>Score</th><th>Content</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.user.name %></td>
                <td><%= review.rating %></td>
                <td><%= review.content %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
  </div>
</section>