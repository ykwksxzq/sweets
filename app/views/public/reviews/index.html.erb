<section class="section mt-6">
  <div class="container">
     <div class="row justify-content-center">
      <h1 class="main-title md-2">Reviews</h1>
    </div>

     <div class="row justify-content-center">
      <div class="col-md-8 mb-2">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
             <%= @post.title %>
            </p>
          </header>
          <div class="card-content">
            <%= link_to post_path(@post.id) do %>
            <%= image_tag @post.get_image(500, 500), class:"card-img-top";%>
            <% end %>
          <div class="card-content">
            <div class="card header p-3">

            <%= render 'star', post: @post %>

            </div>
             <table class="table is-fullwidth has-text-centered">
              <thead>
               <tr>
                 <th>Name</th><th>Star</th><th>Score</th><th>Content</th>
               </tr>
              </thead>
              <tbody>
                <% @reviews.each do |review| %>
                 <tr>
                   <td><%= review.user.name %></td>
                   <td><%= render 'first_star', post: @post %></td>
                   <td><%= review.score %></td>
                   <td><%= review.content %></td>
                 </tr>
                <% end %>
              </tbody>
             </table>
           </div>
         </div>

       </div>
       <div class="row p-3">
      <div class="col">
       <h3 class="title">Write to Review</h3>
        <%= render partial: 'public/reviews/form', review: @review, post: @post %>
       </div>
    </div>
     </div>
</section>