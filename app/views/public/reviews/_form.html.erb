

<%= form_with model: @review, url: post_reviews_path(@post), method: :post do |f| %>
<div class="rating-box">
<div class="row">
<div class="main-rating">
  <div class="ratings mb-3">
    <span class="fa fa-star-o" id="star"></span>
    <span class="fa fa-star-o" id="star"></span>
    <span class="fa fa-star-o" id="star"></span>
    <span class="fa fa-star-o" id="star"></span>
    <span class="fa fa-star-o" id="star"></span>
  </div>
  </div>
  <div class="ml-3 rating-value-display">
    <span id="rating-value-display">0</span>/5</div>
  </div>
</div>
<%= f.hidden_field :post_id, value: @post.id %>
<%= f.hidden_field :score, id: "rating-value" %>
<%= f.text_field :content, class: 'row form-control', placeholder:"100文字以内, 1つの投稿に対して1回レビューできます" %>
<div class="actions m-3">
 <%= f.submit 'Review', class: "btn btn-success" %>
</div>
</div>

<% end %>
