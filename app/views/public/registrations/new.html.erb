<div class="container">
 <div class="row justify-content-center">
  <div class="col-md-5 col-sm-10 m-3">
   <h5 class="text-dark p-4 mb-0">新規登録</h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= render "public/shared/error_messages", resource: @user %>

    <div class="form-group row">
     <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder:'全て半角英数で入力' %>
     </div>
    </div>

    <div class="form-group row">
     <div class="field">
      <%= f.label :Name %><br>
      <%= f.text_field :name, class: 'form-control', placeholder:'20文字以内で設定' %>
     </div>
    </div>

    <div class="form-group row">
     <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder:'6文字以上で設定' %>
     </div>
    </div>

    <div class="form-group row">
     <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder:'6文字以上で設定(確認)' %>
     </div>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: 'btn btn-primary' %>
    </div>
   <% end %>

　 <h6 class="section-ttl text-dark p-4 mb-0">既に登録済みの方</h6>
    <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>

  </div>
 </div>
</div>
